{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "rootDirs": ["src", "stories"],
    "baseUrl": "./src/"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", "build", "scripts"
  ]
}